<%- include('partials/head') %>
<%- include('partials/header') %>


<div class="upload-container">
  <h2 class="page-title">Upload Book PDF</h2>
  <% if (error) { %>
  <div class="error"><%= error %></div>
  <% } %>
  <form
    action="/book-pdfs/upload"
    method="POST"
    enctype="multipart/form-data"
    class="upload-form"
  >
    <label for="book_id">Book ID (optional):</label>
    <input
      type="number"
      id="book_id"
      name="book_id"
      min="1"
      placeholder="Type Book ID or leave blank"
    />
    <br />
    <label for="book_title">Book Title (optional):</label>
    <input
      type="text"
      id="book_title"
      name="book_title"
      placeholder="Type Book Title or leave blank"
    />
    <br />
    <label for="file">PDF File:</label>
    <input
      type="file"
      id="file"
      name="file"
      accept="application/pdf"
      required
    />
    <br />
    <button type="submit" class="button">Upload PDF</button>
  </form>
</div>

<%- include('partials/footer') %>
