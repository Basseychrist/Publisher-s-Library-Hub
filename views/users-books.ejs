<%- include('partials/head') %> <%- include('partials/header') %>

<h2 class="page-title">All Users' PDF Books</h2>
<table class="pdf-table">
  <thead>
    <tr>
      <th>Filename</th>
      <th>Description</th>
      <th>User ID</th>
      <th>Download</th>
    </tr>
  </thead>
  <tbody>
    <% bookPdfs.forEach(function(pdf) { %>
    <tr>
      <td><%= pdf.filename %></td>
      <td><%= pdf.description %></td>
      <td><%= pdf.user_id || pdf.created_by %></td>
      <td>
        <a href="/book-pdfs/<%= pdf.id %>/download" class="button">
          Download <%= pdf.filename %>
        </a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
